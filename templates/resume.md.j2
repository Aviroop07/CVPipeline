<h1 style="margin-bottom:0; font-size:30px; font-family:'Times New Roman', Times, serif; color:#000;">{{ basics.name }}</h1>
<p style="margin-top:2px; font-size:12px; font-style:italic; font-family:'Times New Roman', Times, serif; color:#555;">
  {{ basics.email }} | {{ basics.phone }} | {{ basics.location.city }}, {{ basics.location.countryCode.upper() }}{% if basics.public_id %} | <a href="https://www.linkedin.com/in/{{ basics.public_id }}" style="color:#0063c6; text-decoration:underline;">LinkedIn</a>{% endif %}
</p>

<hr/>

{% macro section(title) -%}
### <span style="font-family:'Times New Roman', Times, serif; font-size:16px; font-weight:bold; color:#0063c6;">{{ title }}</span>
{%- endmacro %}

{{ section('Education') }}
{% for e in education %}
**<span style="color:#0063c6;">{% if e.url %}<a href="{{ e.url }}" style="color:#0063c6;">{{ e.institution }}</a>{% else %}<span style="color:#0063c6;">{{ e.institution }}</span>{% endif %}</span>**  
<em style="font-family:'Times New Roman', Times, serif;">{{ e.studyType }} in {{ e.area }}</em>  
<em style="color:#555; font-family:'Times New Roman', Times, serif;">{{ e.period }}</em>{% if e.score %} | <em style="font-family:'Times New Roman', Times, serif;">CGPA: {{ e.score }}</em>{% endif %}

{% if e.keywords %}*Key Subjects:* {{ e.keywords | join(', ') }}

{% endif %}{% endfor %}
<hr/>

{{ section('Work Experience') }}
{% for w in work %}
**<span style="color:#0063c6;">{% if w.url %}<a href="{{ w.url }}" style="color:#0063c6;">{{ w.name }}</a>{% else %}<span style="color:#0063c6;">{{ w.name }}</span>{% endif %}</span> | {{ w.position }}** <em style="color:#777; font-family:'Times New Roman', Times, serif;">({{ w.location }})</em> | <em style="color:#555; font-family:'Times New Roman', Times, serif;">{{ w.period }}</em>
{% for pt in w.points %}
- <span style="font-family:'Times New Roman', Times, serif;">{{ pt }}</span>
{% endfor %}
{% endfor %}
<hr/>

{{ section('Skills') }}
{% for cat, lst in skills_by_category.items() %}- **<span style="font-family:'Times New Roman', Times, serif;">{{ cat }}</span>:** <span style="font-family:'Times New Roman', Times, serif;">{{ ", ".join(lst) }}</span>
{% endfor %}
<hr/>

{{ section('Personal Projects') }}
{% for p in projects %}
- **<span style="color:#0063c6; font-family:'Times New Roman', Times, serif;">{{ p.name }}</span>** <em style="color:#555; font-family:'Times New Roman', Times, serif;">({{ p.period }})</em>
{% for pt in p.points %}  - <span style="font-family:'Times New Roman', Times, serif;">{{ pt }}</span>
{% endfor %}
{% endfor %}
<hr/>

{{ section('Achievements') }}
{% for a in awards %}
- **<span style="font-family:'Times New Roman', Times, serif;">{{ a.title }}</span>** â€” <span style="font-family:'Times New Roman', Times, serif;">{{ a.awarder }}</span> <em style="color:#555; font-family:'Times New Roman', Times, serif;">({{ a.date }})</em>{% if a.summary %}: <span style="font-family:'Times New Roman', Times, serif;">{{ a.summary }}</span>{% endif %}
{% endfor %} 